.container-bus {
    width: 100%; 
    height: 100%;
    background-color: #FBF9FE;
    font-size: .9375rem;
}

.line-name {
    padding: .9375rem .625rem; 
    background-color: #FFF; 
    border-top: 1px solid #ddd; 
    border-bottom: 1px solid #ddd;
}

.bus-name {
    width: 100%;
    height: 1.625rem;
    border-radius:5px;
    display: inline-block;
    border: 1px solid #ddd;
}

.bus-search {
    width:100%;
    margin-top: .9375rem;
    color:#1aad19;
    text-align:center;
    border:1px solid #1aad19;
    background-color:transparent;
    font-size:14px;
    padding: 5px 0;
    margin-left:auto;
    margin-right:auto;
    box-sizing:border-box;
    text-decoration:none;
    border-radius:5px;
    line-height: 1.5rem;
}