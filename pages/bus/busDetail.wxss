.bus-detail {
  width: 100%;
  height: 99%;
  border-top: 1px solid #ddd;
}

.header-wrapper {
  background: #fff;
  padding: .625rem;
  border-bottom: 1rpx solid #D7D6DC;
  vertical-align: middle;
  padding-right:0;
}

.bus-name {
  font-weight: bold;
  font-family:Arial;
  font-size: .8125rem;
  text-align: left;
  display: inline-block;
  margin-right: 20rpx;
  vertical-align: middle;
}

.bus-start-end {
  max-width:90%;
  text-align: left;
  font-size: .8125rem;
  overflow:hidden;
  white-space:nowrap;
  vertical-align: middle;
  text-overflow:Ã­ellipsis;
  display: inline-block;
}

.station {
  display: inline-block;
}

.icon-switch {
  width: 24rpx;
  height: 18rpx;
  padding: 0 10rpx;
}

.station-wraper {
  width: 90%;
  display:inline-block;
  padding-bottom: 4rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.time-wraper {
  width: 90%;
  color:#a9a9a9;
  font-family:Arial;
  display:inline-block;
}

.time {
  font-size: .75rem;
  display: inline-block;
}

.late-time {
  margin-left: 30rpx;
}

.icon-arrow {
  width: 60rpx;
  float: right;
  height: 48rpx;
  display: inline-block;
  vertical-align: top;
  margin-top:-90rpx;
  padding:20rpx;

}

.scroll-view_H {
  height: calc(99% - 165rpx);
  margin: .3125rem 0;
}

.stops-items {
  padding: .3125rem 0;
  margin: .3125rem .625rem 0;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.stops-items:last-child {
  margin-bottom: .3125rem;
}

.stop-item {
  text-align: left;
  font-size: .9375rem;
  padding: .3125rem;
}

.station-name {
  width:90%;
  display:inline-block;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.icon-arrow-up-down {
  width:18px;
  height:16px;
  margin-left:18rpx;
  display: inline-block;
}

.bellows-wrapper {
  font-size: .75rem;
  padding: .3125rem .625rem;
}

.hidden {
  display: none;
}
