<view class="classname">
  <form bindsubmit="bindOnSubmit">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea
            auto-height
            name="content"
            class="weui-textarea"
            placeholder="请输入产品意见, 我们将不断优化体验"
            bindinput="inputTyping"
          />
          <view class="weui-textarea-counter">{{content.length}}/140</view>
        </view>
      </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input
            name="phone"
            class="weui-input"
            placeholder="请输入您的手机号/邮箱(选填)"
          />
        </view>
      </view>
    </view>
    <view class="button-wrapper">
      <button class="btn-submit" form-type="submit" type="primary">
        提交
      </button>
    </view>
  </form>
</view>